.row.line

  - unless template.accomplishable?
    .line-info.red

  .col3of4.line-col
    %strong= template.name

  .col1of4.line-col.line-actions

    .multibutton

      %a.button.white{href: manage_edit_template_path(current_inventory_pool, template)}
        = _("Edit")

      .dropdown-holder.inline-block
        .button.white.dropdown-toggle
          .arrow.down

        %ul.dropdown.right

          %li
            %a.dropdown-item.red{href: manage_delete_template_path(current_inventory_pool, template), :"data-method" => :delete}
              %i.icon-trash
              = _("Delete")
