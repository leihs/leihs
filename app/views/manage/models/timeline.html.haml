      if(bandInfos.length > 1 && i != 1) bandInfos[i].syncWith = 1;
      bandInfos[i].decorators = [
          new Timeline.SpanHighlightDecorator({
              startDate:  "#{(Date.today.to_time).to_s(:rfc822)}",
              endDate:    "#{(Date.tomorrow.to_time).to_s(:rfc822)}",
              color:      "#1f71d7",
