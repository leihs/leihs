    theme.event.overviewTrack.offset = #{sum_w};
    theme.event.tape.height = 15;
    
    var bandNames = #{bandNames_js.to_json};
    
    var bandInfos = [
        #{bandInfos_js.join(',')}
    ];
    
    bandInfos[0].highlight = true;
  
