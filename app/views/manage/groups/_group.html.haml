.row.line

  .col1of5.line-col
    %strong= group.name

  .col1of5.line-col
    = group.users.size
    = _("Users")

  .col1of5.line-col
    = group.models.size
    = _("Models")

  .col1of5.line-col
    = group.partitions.to_a.sum(&:quantity)
    = _("Allocations")

  .col1of5.line-col.line-actions

    - if group.can_destroy?

      .multibutton

        %a.button.white{href: manage_edit_inventory_pool_group_path(current_inventory_pool, group)}= _("Edit")

        .dropdown-holder.inline-block
          .button.white.dropdown-toggle
            .arrow.down

          %ul.dropdown.right

            %li
              %a.dropdown-item.red{href: manage_delete_inventory_pool_group_path(current_inventory_pool, group), :"data-method" => :delete}
                %i.fa.fa-trash
                = _("Delete")

    - else

      %a.button.white{href: manage_edit_inventory_pool_group_path(current_inventory_pool, group)}= _("Edit")
